<Window x:Class="DicomEditor.Views.InputValueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DicomEditor.Views"
        mc:Ignorable="d"
        Title="InputValueWindow" Height="180" Width="400" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Please input the string value: "/>
            <TextBox Text="{Binding TagValue}" Height="35"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
            <Button Content="OK"  Width="80" Click="OK_Click"/>
        </StackPanel>

       


    </Grid>
</Window>
